@using TCSA.V2.Components.Admin.Pages
@inherits LayoutComponentBase
@layout TCSA.V2.Components.Layout.MainLayout

<div class="row d-lg-none d-xl-none mt-5 pt-5">
    <DashboardNavMenuMobile />
</div>
<div class="dashboard-layout-wrapper row vh-100">
    <div class="col-lg-2 fixed-column fixed-left d-lg-block col-sm-12 d-sm-none">
        <DashboardNavMenu />
    </div>
    <div class="col-lg-8 scrollable-body col-sm-12">
        @Body
    </div>
    <div class="col-lg-2 fixed-column fixed-right d-lg-block d-sm-none">
        <DashboardExtrasMenu />
    </div>
</div>

<style>
    .fixed-column {
        position: fixed;
        top: 0;
        bottom: 0;
        width: 16.6667%; /* 2 out of 12 columns */
        height: 100vh;
        overflow-x: hidden !important; /* Prevent horizontal scrolling */
        overflow-y: hidden !important; /* Prevent vertical scrolling */
    }

    .fixed-left {
        left: 0;
    }

    .fixed-right {
        right: 0;
    }

    .scrollable-body {
        margin-left: 16.6667%;
        margin-right: 16.6667%;
        overflow-y: auto;
        height: 100vh;
    }

</style>